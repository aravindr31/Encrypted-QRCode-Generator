<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <title>CODE Gen</title>
</head>

<body>
    <section>
        <div class="container inlinr mt-3">
            <br>
            <br>
            <div class="pCard float-left  border rounded "><br>
                <h4 class="text-center ">QR Code Generator</h4>
                <br>
                <form action="/gencode" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="url" id="url" placeholder="Enter Url" value="{{url}}"
                            required>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-dark mt-2 text-center"  onclick="submitFunction()">Generate QR</button>
                        <button class="btn btn-danger mt-2 text-center" onclick="clearFunction()">Clear URL</button>
                    </div>
                </form>
            </div>
            <div class="pCard  float-right border rounded ">
                <br>
                <h4 class="text-center ">QR CODE</h4>
                <img src="{{encodedURL}}" alt="">
                <br>
            </div>
        </div>
    </section>
    <style>
        section {
            padding-top: 50px;
            background-color: #383A59;
            height: 100vh;
            width: 100vw;
        }

        .inlinr {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100vw;
            height: max-content;
        }

        .pCard {
            background-color: white;
            flex: .5;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0 10px;
            padding: 20px;
        }

        input[type=text] {
            width: 100vh;
        }

        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
    </style>
    <script>
        const clearFunction = () => {
            document.getElementById('url').value = ""
            window.location.href="/"
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
        crossorigin="anonymous"></script>
</body>

</html>
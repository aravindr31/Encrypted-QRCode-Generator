<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <title>CODE Gen</title>
</head>

<body>
    {{!-- <div class='top_container'> --}}
        <div class="container inlinr">
            <br>
            <br>
            <div class="pCard float-left  border rounded "><br>
                <h4 class="text-center ">QR Code Generator</h4>
                <br>
                <form action="/gencode" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="url" id="url" placeholder="Enter Url"
                            value="{{url}}" required>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-dark mt-2 text-center" onclick="submitFunction()">Generate
                            QR</button>
                        <button class="btn btn-danger mt-2 text-center" onclick="clearFunction()">Clear URL</button>
                    </div>
                </form>
            </div>
            <div class="pCard  float-right border rounded ">
                <br>
                <h4 class="text-center ">QR CODE</h4>
                <img src="{{encodedURL}}" alt="">
                <br>
            </div>
        </div>
    {{!-- </div> --}}
    <style>
        body{
            background-color: #383A59;
            height: 100vh;
            width: 100vw;
        }


        .inlinr {
            padding-top: 150px;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100vw;
            height: max-content;
        }

        .pCard {
            background-color: white;
            flex: .5;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0 10px;
            padding: 20px;

        }

        form {
            margin:10px,20px;
            width: 100%;
        }

        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        @media only screen and (max-width: 768px) {
            .inlinr {
                padding-top: 0px;
                flex-direction: column;
                height: 100vh;
            }

            .pCard {
                width: 100vw;
                margin: 10px;
                padding: 0px;
            }


        }
    </style>
    <script>
        const clearFunction = () => {
            document.getElementById('url').value = ""
            window.location.href = "/"
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
        crossorigin="anonymous"></script>
</body>

</html>